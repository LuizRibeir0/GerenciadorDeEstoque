<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox
        xmlns="http://javafx.com/javafx/24"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="com.docevida.GerenciadorDeEstoque.viewController.CadastroProdutoController"
        spacing="10"
        alignment="CENTER"
        prefWidth="400"
        prefHeight="300">

    <Label text="Cadastrar Produto"
           style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <TextField fx:id="txtNome" promptText="Nome do produto" />

    <TextField fx:id="txtQuantidade" promptText="Quantidade" />

    <Button text="Salvar" onAction="#salvar" />
    <Button text="Voltar" onAction="#voltar" />

</VBox>
